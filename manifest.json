{
"manifest_version": 2,
"name": "YouTube AdSkipper",
"version": "1.0",
"description": "Blocking all types of unwanted and boaring Ads on youtube.",


"page_action": {
    "default_icon": "128.png",
    "default_popup": "popup.html"
},
"icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "64": "64.png",
    "128": "128.png"
},
"background": {
    "scripts": ["background.js"],
    "persistent": true
},
"content_scripts": [
    {
        "matches": [
            "https://.youtube.com/*",
            "http://*/*",
            "https://*/*"],
        "js": ["content.js"]
    }
],
"permissions": [
    "activeTab"
]
}